issn = {0012-8252},
journal = {Earth-Science Reviews},
keywords = {Dynamic equilibrium,Estuaries and coasts,Morphodynamic equilibrium,Numerical modelling,Sediment transport,Static equilibrium},
month = {feb},
pages = {257--267},
title = {{Is “Morphodynamic Equilibrium” an oxymoron?}},
