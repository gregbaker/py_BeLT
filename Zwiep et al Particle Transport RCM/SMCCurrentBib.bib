file = {:C$\backslash$:/Users/schartrand/Documents/UBC PhD/Reviewed Papers/Equilibrium/Mackin{\_}1948{\_}GSAB.pdf:pdf},
journal = {Geological Society of America Bulletin},
number = {5},
pages = {463--512},
title = {{Concept of the graded river}},
