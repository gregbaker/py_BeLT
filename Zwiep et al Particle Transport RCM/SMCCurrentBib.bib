journal = {Basin Research},
number = {2},
pages = {73--90},
publisher = {Blackwell Publishing Ltd},
title = {{The large-scale dynamics of grain-size variation in alluvial basins, 1: Theory}},
url = {http://dx.doi.org/10.1111/j.1365-2117.1992.tb00145.x},
volume = {4},
