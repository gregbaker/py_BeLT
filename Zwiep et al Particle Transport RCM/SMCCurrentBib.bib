keywords = {Continental neotectonics,Core,Earthquake ground motions and engineering seismol,Erosion,Floods,Fracture and flow,Geomorphology: fluvial,Geomorphology: general,Geomorphology: hillslope,Mantle,Sedimentation},
number = {B8},
pages = {17661--17674},
title = {{Dynamics of the stream-power river incision model: Implications for height limits of mountain ranges, landscape response timescales, and research needs}},
