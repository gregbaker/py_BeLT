journal = {Earth Surface Processes and Landforms},
keywords = {Channel stability,Hydraulic geometry,Pool-riffle topography,River Severn,Shear velocity,Velocity reversal hypothesis},
number = {1},
pages = {19--31},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{An appraisal of the velocity-reversal hypothesis for stable pool-riffle sequences in the river Severn, England}},
