keywords = {Geomorphology: fluvial,Modeling,River channels,Sediment transport,convective acceleration,fluvial geomorphology,morphologic evolution,numerical flow model,point bar,topographic steering},
number = {F1},
pages = {n/a----n/a},
title = {{Effect of point bar development on the local force balance governing flow in a simple, meandering gravel bed river}},
url = {http://dx.doi.org/10.1029/2010JF001838},
volume = {116},
